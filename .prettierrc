{
  "semi": true,                 
  "trailingComma": "es5",      
  "singleQuote": true,         
  "printWidth": 80,             
  "tabWidth": 2,               
  "useTabs": false,             
  "bracketSpacing": true,      
  "jsxBracketSameLine": true,  
  "arrowParens": "avoid",       
  "requirePragma": false,      
  "insertPragma": false,        
  "proseWrap": "preserve",       
  "htmlWhitespaceSensitivity": "css",  
  "cssEnable": ["css", "less", "scss"] 
}
